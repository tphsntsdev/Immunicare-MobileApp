<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    tools:context=".Homepage"
    >


    <TextView
        android:id="@+id/textView12"
        android:layout_width="355dp"
        android:layout_height="179dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/divider"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="276dp"
        android:layout_height="118dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Welcome to Immunicare!"
        android:textColor="#66b2b2"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Welcometext"
        android:layout_width="169dp"
        android:layout_height="55dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/bergensans"
        android:text="Welcome"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="367dp"
        android:layout_height="183dp"
        android:layout_marginTop="285dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/divider"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="277dp"
        android:layout_height="337dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="210dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login_page_wireframe_mobile_prototype_removebg_preview__1_" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/bergensans"
        android:text="Vaccine Guide as per Department of Health"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/aboutUsButton"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="159dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="81dp"
        android:fontFamily="@font/bergensans"
        android:text="Get Updated : "
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Vaccine:"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13" />


    <TextView
        android:id="@+id/textView17"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Updates: "
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#008080"
        android:text="Guide"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="129dp"
        android:layout_height="64dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#008080"
        android:text="Updates"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="411dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        android:background="@drawable/nav_design"
        app:itemIconSize="30sp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_item">


        <ImageButton
            android:id="@+id/chatbot_btn"
            android:layout_width="61dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbtnbg"
            tools:layout_editor_absoluteX="314dp"
            tools:layout_editor_absoluteY="715dp" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <RelativeLayout
        android:id="@+id/chatBot_UI"
        android:layout_width="319dp"
        android:layout_height="595dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="125dp"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="319dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:fontFamily="@font/bergensansbold"
            android:gravity="center"
            android:text="ChatBot"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/hideChatbot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_expand_circle_down_24" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="479dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/user_response"
                android:layout_width="250dp"
                android:layout_height="60sp"
                android:background="@color/whitesmoke" />

            <ImageButton
                android:id="@+id/submit_message"
                android:layout_width="61dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedsendbtn"
                tools:layout_editor_absoluteX="314dp"
                tools:layout_editor_absoluteY="715dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>