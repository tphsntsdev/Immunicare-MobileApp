<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentPage">
    <EditText
        android:id="@+id/hiddentime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:inputType="none"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/hiddendate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:inputType="none"
        tools:ignore="MissingConstraints" />



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="320dp"
        android:layout_height="291dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="185dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        android:background="@drawable/nav_design"
        app:itemIconSize="30sp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_item">


        <ImageButton
            android:id="@+id/chatbot_btn"
            android:layout_width="61dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbtnbg"
            tools:layout_editor_absoluteX="314dp"
            tools:layout_editor_absoluteY="715dp" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="415dp"
        android:layout_height="276dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/formaps_removebg_preview" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Ready to get Vaccinated?"
        android:textColor="#66b2b2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />


    <TextView
        android:id="@+id/imageView11"
        android:layout_width="84dp"
        android:layout_height="69dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/schedulebtn"
        android:fontFamily="@font/bergensanssemibold"
        android:gravity="center"
        android:paddingTop="48sp"
        android:text="Date"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toStartOf="@+id/imageView12"

        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/imageView12"
        android:layout_width="84dp"
        android:layout_height="69dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/locationbtn"
        android:fontFamily="@font/bergensanssemibold"
        android:gravity="center"
        android:paddingTop="48sp"
        android:text="Location"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/imageView13"
        android:layout_width="84dp"
        android:layout_height="69dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/vaccinebtn"
        android:fontFamily="@font/bergensanssemibold"
        android:gravity="center"
        android:paddingTop="48sp"
        android:text="Vaccine"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/locationtextview"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Location : "
        android:textColor="#66b2b2"
        android:textSize="23sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/locationEditTextContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.53" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/locationEditTextContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="190dp"
        app:errorEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/timePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Location"
            android:inputType="text"
            android:lines="1"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="364dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <WebView
        android:id="@+id/mapsDisplay"
        android:layout_width="410dp"
        android:layout_height="228dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:src="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/timePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationEditTextContainer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_margin="10dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Vaccine : "
        android:textColor="#66b2b2"
        android:textSize="23sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/locationEditTextContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <Button
        android:id="@+id/timePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#66b2b2"
        android:text="Select Time"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="485dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#66b2b2"
        android:text="Submit"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_margin="10dp"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Child:"
        android:textColor="#66b2b2"
        android:textSize="23sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/childVaccineTextContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/childVaccineTextContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="132dp"
        app:errorEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapsDisplay">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/childvaccineEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Vaccine"
            android:inputType="none"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/VaccineTextContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="54dp"
        app:errorEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/childVaccineTextContainer"
        app:layout_constraintEnd_toEndOf="@+id/calendarView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationtextview">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/vaccineEditText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Vaccine"
            android:inputType="none"
            android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="65dp"
        android:fontFamily="@font/bergensansbold"
        android:text="Adults :"
        android:textColor="#66b2b2"
        android:textSize="23sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/VaccineTextContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <RelativeLayout
        android:id="@+id/chatBot_UI"
        android:layout_width="319dp"
        android:layout_height="595dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="125dp"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="319dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:fontFamily="@font/bergensansbold"
            android:gravity="center"
            android:text="ChatBot"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/hideChatbot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_expand_circle_down_24" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="479dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/user_response"
                android:layout_width="250dp"
                android:layout_height="60sp"
                android:background="@color/whitesmoke" />

            <ImageButton
                android:id="@+id/submit_message"
                android:layout_width="61dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedsendbtn"
                tools:layout_editor_absoluteX="314dp"
                tools:layout_editor_absoluteY="715dp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>